<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">
        <img src="images/Logo.png" alt="Greenscale Logo" />
        GreenScale
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass nav-container" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <div>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="dataimport">
                    <span class="oi oi-data-transfer-download" aria-hidden="true"></span> Data Import
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-graph" aria-hidden="true"></span> View Results
                </NavLink>
            </li>
        </div>
        <div>
            <li class="nav-item px-3" id="settings">
                <NavLink class="nav-link" href="settings">
                    <span class="oi oi-wrench" aria-hidden="true"></span>
                </NavLink>
            </li>
        </div>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
